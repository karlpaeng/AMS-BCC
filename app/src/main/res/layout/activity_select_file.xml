<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectFile">

    <Button
        android:id="@+id/fileSelectBtn"
        android:layout_width="252dp"
        android:layout_height="57dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#30000000"
        android:text="Select XLSX File"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="104dp"
        android:layout_height="26dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:text="File Path:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fileSelectBtn" />

    <TextView
        android:id="@+id/pathTextView"
        android:layout_width="254dp"
        android:layout_height="75dp"
        android:text="(none selected)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/importBtn"
        android:layout_width="252dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FFFFFF"
        android:text="Import File"
        android:textColor="#FFFFFF"
        android:textSize="16sp"

        app:backgroundTint="#3BC393"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pathTextView" />

    <ImageView
        android:id="@+id/imageViewSF"
        android:layout_width="320dp"
        android:layout_height="310dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_white" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_info_24_gray"
        android:drawablePadding="10dp"
        android:text="Tapping 'IMPORT FILE' will replace any\nexisting Student Data currently saved on\nthis device with new data contained in\nthe file located at the specified File Path.\nProceed with caution."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/importBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>