<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MngeFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <Button
            android:id="@+id/btnUpdateNew"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_solid"
            android:drawableRight="@drawable/icon_edit"
            android:drawablePadding="200000dp"
            android:drawableTint="@color/light_b"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:text="Update Student List"
            android:textAllCaps="false"
            android:textColor="@color/light_b"
            android:textSize="20dp"
            android:theme="@style/solidBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnExportNew"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_solid"
            android:drawableRight="@drawable/icon_export"
            android:drawablePadding="200000dp"
            android:drawableTint="@color/light_b"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:text="Export all Scan records"
            android:textAllCaps="false"
            android:textColor="@color/light_b"
            android:textSize="20dp"
            android:theme="@style/solidBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnUpdateNew" />

        <Button
            android:id="@+id/btnClearNew"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_solid"
            android:drawableRight="@drawable/icon_delete"
            android:drawablePadding="200000dp"
            android:drawableTint="@color/light_b"
            android:fontFamily="sans-serif"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:text="Clear all Scan records"
            android:textAllCaps="false"
            android:textColor="@color/light_b"
            android:textSize="20dp"
            android:theme="@style/solidBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnExportNew" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>