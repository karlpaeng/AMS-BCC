<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <Button
            android:id="@+id/searchIDNew"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_solid"
            android:drawableLeft="@drawable/icons_keypad"
            android:drawablePadding="200000dp"
            android:drawableTint="@color/light_b"
            android:fontFamily="sans-serif"
            android:gravity="right|center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Search by Student ID"
            android:textAllCaps="false"
            android:textColor="@color/light_b"
            android:textSize="20dp"
            android:theme="@style/solidBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/searchClassNew"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_solid"
            android:drawableLeft="@drawable/icons_group"
            android:drawablePadding="200000dp"
            android:drawableTint="@color/light_b"
            android:fontFamily="sans-serif"
            android:gravity="right|center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Search by Class"
            android:textAllCaps="false"
            android:textColor="@color/light_b"
            android:textSize="20dp"
            android:theme="@style/solidBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchIDNew" />

        <Button
            android:id="@+id/searchDateNew"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/round_solid"
            android:drawableLeft="@drawable/icons_calendar"
            android:drawablePadding="200000dp"
            android:drawableTint="@color/light_b"
            android:fontFamily="sans-serif"
            android:gravity="right|center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Search by Date"
            android:textAllCaps="false"
            android:textColor="@color/light_b"
            android:textSize="20dp"
            android:theme="@style/solidBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchClassNew" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>