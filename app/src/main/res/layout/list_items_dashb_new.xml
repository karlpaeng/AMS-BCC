<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvNameDashNew"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-5dp"
        android:fontFamily="sans-serif-black"
        android:gravity="start|center_vertical"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIDDashNew" />

    <TextView
        android:id="@+id/tvIDDashNew"
        android:layout_width="106dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:text="ID"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDateDashNew"
        android:layout_width="106dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:gravity="start|center_vertical"
        android:text="Date"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/tvInDashNew"
        app:layout_constraintStart_toEndOf="@+id/tvIDDashNew"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInDashNew"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="start|center_vertical"
        android:text="IN"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOutDashNew"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="4dp"
        android:gravity="start|center_vertical"
        android:text="OUT"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInDashNew" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"

        android:background="@color/navy"
        app:layout_constraintTop_toBottomOf="@+id/tvNameDashNew"
        tools:layout_editor_absoluteX="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>