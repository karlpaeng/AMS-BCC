<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A5C99"
    tools:context=".ManageStudentData">

    <TextView
        android:id="@+id/manageDataTextView"
        android:layout_width="345dp"
        android:layout_height="85dp"
        android:layout_marginTop="52dp"
        android:text="Manage Student Data"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updateStudentListBtn"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FFFFFF"
        android:text="Update Student List"
        android:textColor="#2A5C99"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manageDataTextView" />

    <Button
        android:id="@+id/exportAllBtn"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FFFFFF"
        android:text="Export all Scan Records"
        android:textColor="#2A5C99"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateStudentListBtn" />

    <Button
        android:id="@+id/clrAllBtn"
        android:layout_width="302dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="#FFFFFF"
        android:text="Clear all Scan Records"
        android:textColor="#2A5C99"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exportAllBtn" />

    <ImageView
        android:id="@+id/MSDimageView"
        android:layout_width="377dp"
        android:layout_height="312dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clrAllBtn"
        app:srcCompat="@drawable/bcc_logo_navy2" />
</androidx.constraintlayout.widget.ConstraintLayout>